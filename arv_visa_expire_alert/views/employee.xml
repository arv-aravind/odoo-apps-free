<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="visa_expiry_hr_employee_view_form" model="ir.ui.view">
        <field name="name">visa.expiry.hr.employee.view.form.inherit</field>
        <field name="model">hr.employee</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/div[1]" position="before">
                <field name="visa_expire_ids" invisible="1"/>
                <field name="is_visa_late" invisible="1"/>
                <widget name="web_ribbon" title="Visa Expiring Soon..." bg_color="bg-danger"
                        attrs="{'invisible': [('is_visa_late', '!=', True)]}"/>
            </xpath>
        </field>
    </record>
</odoo>
