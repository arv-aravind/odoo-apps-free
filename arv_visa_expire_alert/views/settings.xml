<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="visa_expiry_settings_view_form" model="ir.ui.view">
        <field name="name">visa.expiry.settings.view.form.inherit.hr</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='employee_rights_setting_container']" position="after">
                <h2>Alert Before Employee Visa Expiry</h2>
                <div class="row mt16 o_settings_container" name="employee_visa_expiry_container">
                    <div class="col-12 col-lg-6 o_setting_box" title="Notify in advance of visa expiration.">
                        <div class="o_setting_left_pane">
                            <field name="arv_expiry_alert_day"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="arv_expiry_alert_day"/>
                            <div class="text-muted">
                                Notify in advance of visa expiration.
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" title="Send notifications to the selected user.">
                        <field name="arv_alert_user_id"/>
                        <div class="text-muted">
                            Send notifications to the selected user.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
